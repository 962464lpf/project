.work-menu {
	width: calc(100% - 50rpx);
	padding: 20rpx 25rpx 0 25rpx;
	margin-bottom: 20rpx;
	background-color: #fff;
	border-radius: 16rpx;
	box-shadow: 3rpx 5rpx 5rpx 0 rgba(0, 0, 0, .2);
}

.work-menu-name {
	width: 100%;
	padding-bottom: 10rpx;
	border-bottom: 1rpx solid rgba(153, 153, 153, .5);
}

.menu-name {
	font-size: 36rpx;
	color: #333;
	margin-left: 20rpx;
}

.work-menu-list {
	width: 100%;
	padding-top: 20rpx;
	flex-wrap: wrap;
}

.work-menu-list-item {
	width: 32.5%;
	flex-shrink: 0;
	margin-bottom: 20rpx;
	margin-right: 1.25%;
}

.work-menu-list-item:nth-of-type(3n) {
	margin-right: 0;
}

.list-item-name {
	font-size: 24rpx;
	color: #666;
	margin-left: 15rpx;
}

