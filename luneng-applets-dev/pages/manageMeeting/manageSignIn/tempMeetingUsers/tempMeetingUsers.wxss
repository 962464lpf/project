.container {
	padding: 25rpx 0;
}
.search-box {
	width: 100%;
	margin-bottom: 20rpx;
}
.van-search {
	padding: 0!important;
}
.unit-box {
	width: 100%;
}
.unit-name {
	width: 100%;
}
.unit-member-label {
	width: 100%;
	box-sizing: border-box;
	justify-content: space-between;
}
.member-label {
	width: 28%;
	text-align: center;
	color: #323232;
	font-size: 28rpx;
	padding: 20rpx 0;
}
.member-label-opt {
	width: 16%;
	text-align: center;
	color: #323232;
	font-size: 28rpx;
	padding: 20rpx 0;
}
.unit-member-list {
	width: 100%;
}

.member-list-item {
	width: 100%;
	justify-content: space-between;
	margin-bottom: 10rpx;
	padding: 15rpx 0;
	background-color: #fff;
	position: relative;
}
.member-label1 {
	width: 28%;
	flex-shrink: 0;
	text-align: center;
	color: #666;
	font-size: 28rpx;
	padding: 5rpx 0;
	word-wrap: break-word;
	word-break: break-all;
}
.member-label1:nth-of-type(3) {
	margin-right: 16%;
}
.border-line {
	border-left: 1rpx solid #666;
	border-right: 1rpx solid #666;
}
.tree-select-box {
	height: 100%;
	width: 100%;
}
.text3 {
  width: 16%;
  padding: 5rpx 0;
  background-color: rgb(241, 146, 57);
  position: absolute;
  right: 0;
  top: 0;
	bottom: 0;
	font-size: 28rpx;
  color: #fff;
}
