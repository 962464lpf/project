.header {
  width: 100%;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #888686;
}
.header .title {
  color: #000;
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 15rpx;
}
.header .other {
  width: 100%;  
}
.header .other text:nth-of-type(1) {
  color: steelblue;
  font-size: 26rpx;
  margin-right: 20rpx;
}
.header .other text:nth-of-type(2) {
  color: #666;
  font-size: 26rpx;
}
.content {
  width: 100%;
}
.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 20rpx 20rpx 40rpx 20rpx;
  border: 1rpx solid #ECECEC;
}