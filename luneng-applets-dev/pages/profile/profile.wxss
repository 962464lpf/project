.profile-box {
	width: calc(100% - 50rpx);
	padding: 0 25rpx;
	background-color: #fff;
	margin-bottom: 30rpx;
	border-radius: 16rpx;
	box-shadow: 3rpx 5rpx 5rpx 0 rgba(0, 0, 0, .2);
}

.profile-box-no {
	width: 100%;
}

.disabled-bg {
	background-color: #bfc1c6;
}

.info-row {
	display: flex;
	justify-content: space-between;
	width: 100%;
	padding: 25rpx 0;
	border-bottom: 1rpx solid rgba(0, 0, 0, .3);
}

.profile-box .info-row:nth-last-of-type(1) {
	border-bottom: 0;
}

.label-text {
	display: flex;
	align-items: center;
	width: 20%;
	font-size: 28rpx;
	line-height: 28rpx;
	color: #333;
}

.info-row-out {
	display: flex;
	justify-content: center;
	width: 100%;
	padding: 25rpx 0;
	border-bottom: 1rpx solid rgba(0, 0, 0, .3);
}
.login-out {
	font-size: 30rpx;
	line-height: 30rpx;
	font-weight: 500;
	color: rgb(5, 236, 129);
}

.content-box {
	width: 80%;
	margin-right: 15rpx;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	font-size: 28rpx;
	line-height: 28rpx;
	color: #666;
	word-wrap: break-word;
	word-break: break-all;
}

.preview-img {
	width: 100%;
	padding: 25rpx 0;
	display: flex;
	justify-content: center;
	align-items: center;
}
.preview-avatar {
	width: 80%;
	border-radius: 50%;
}