@import "../../../assets/iconfont.wxss";

.container {
	width: 100%;
	padding: 20rpx 0;
}
.form-box {
	width: 100%;
	margin-bottom: 25rpx;
}
.label-text {
	width: 100%;
	font-size: 28rpx;
	padding: 0 20rpx;
	color: #000;
	margin-bottom: 10rpx;
	position: relative;
}
.star {
	position: absolute;
	top: 2rpx;
	left: 10rpx;
	font-size: 22rpx;
	color: red;
}
.input-box {
	width: 100%;
	padding: 20rpx 0;
	background-color: #fff;
}
.disable-bg {
	background-color: #bfc1c6;
}
.input-style {
	padding: 0 20rpx;
	font-size: 30rpx;
	color: #333;
}
.tip-text {
	width: 100%;
	padding: 0 20rpx;
	font-size: 20rpx;
	color: red;
	background-color: #fff;
}
.time-box {
	width: 50%;
}
.extra-height {
	height: 40rpx;
}
.time-picker-box {
	width: 100%;
}

.extra-editor {
	padding: 0;
}
.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

.submit-box {
	width: 100%;
	justify-content: space-around;
	position: fixed;
	left: 0;
	right: 0;
	bottom: 10rpx;
}

.submit-btn {
	width: 48%;
}

