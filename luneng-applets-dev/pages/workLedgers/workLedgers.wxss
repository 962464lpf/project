.move-area {
	width: 100%;
	height: 100%;
}
.move-view {
	width: 50rpx;
	height: 50rpx;
	left: 82%;
	z-index: 9999;
}
.work-ledger {
	width: calc(100% - 50rpx);
	padding: 25rpx;
	margin-bottom: 30rpx;
	background-color: #fff;
	border-radius: 16rpx;
	box-shadow: 3rpx 5rpx 5rpx 0 rgba(0, 0, 0, .2);
}

.work-ledger-name {
	width: 100%;
	padding-bottom: 25rpx;
	border-bottom: 1rpx solid rgba(153, 153, 153, .5);
}

.title {
	width: 80%;
	font-size: 32rpx;
	line-height: 32rpx;
	color: #333;
}

.status {
	width: 20%;
	font-size: 28rpx;
	line-height: 28rpx;
	color: #1989fa;
	text-align: right;
}

.work-ledger-content {
	width: 100%;
	padding-top: 25rpx;
}

.content-box {
	width: 78%;
	flex-shrink: 0;
	justify-content: space-between;
}

.content-type {
	font-size: 27rpx;
	line-height: 27rpx;
	color: #666;
	margin-bottom: 20rpx;
}

.content-time {
	font-size: 24rpx;
	line-height: 24rpx;
	color: #999;
}

.operate-box {
	width: 22%;
	justify-content: flex-end;
}